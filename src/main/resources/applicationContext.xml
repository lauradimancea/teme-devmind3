<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="someCat"
          class="com.devmind.temedevmind3.inversionOfControl.Cat">
    </bean>
    <bean id="someDog"
          class="com.devmind.temedevmind3.inversionOfControl.Dog">
    </bean>
    <bean id="someMouse"
          class="com.devmind.temedevmind3.inversionOfControl.Mouse">
    </bean>

    <bean id="taskPrototype"
          class="com.devmind.temedevmind3.beanLifecycle.Task"
          scope="prototype"
          init-method="init">
    </bean>

    <bean id="task"
          class="com.devmind.temedevmind3.beanLifecycle.Task"
          init-method="init"
          destroy-method="destroy">
    </bean>

</beans>